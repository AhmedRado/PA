<?xml version="1.0"?>
<launch>
  <arg name="paused" default="false"/>
  <arg name="gazebo_gui" default="true"/>

  <!-- startup simulated world -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <!-- <arg name="world_name" value="$(find exoskelaton_model)/world/my_custom_world.world"/> -->
    <!-- <arg name="world_name" value="$(find exoskelaton_model)/world/empty_world_no_gravity_ODE.world"/> -->
    <!-- <arg name="world_name" value="$(find exoskelaton_model)/world/empty_world_no_gravity_DART.world"/> -->
    <arg name="world_name" default="worlds/empty.world"/>
    <arg name="paused" value="true"/>
    <arg name="gui" value="$(arg gazebo_gui)"/>
  </include>

  <!-- send robot urdf to param server -->
  <param name="robot_description" textfile="$(find exoskelaton_plus_hand)/urdf/exoskelaton_plus_hand.urdf" />

  <!-- unpause only after loading robot model -->
  <arg name="unpause" value="$(eval '' if arg('paused') else '-unpause')" />
  <!-- push robot_description to factory and spawn robot in gazebo at the origin, change x,y,z arguments to spawn in a different position -->
  <arg name="world_pose" value="-x 0 -y 0 -z 2" />
  <node name="spawn_gazebo_model" pkg="gazebo_ros" type="spawn_model" args="-urdf -param robot_description -model robot $(arg unpause) $(arg world_pose)"
    respawn="false" output="screen" />

  <include file="$(find exoskelaton_plus_hand)/launch/ros_controllers.launch"/>
  
</launch>