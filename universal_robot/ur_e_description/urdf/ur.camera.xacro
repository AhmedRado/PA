<?xml version="1.0"?>
<robot xmlns:xacro="http://wiki.ros.org/xacro">

    <material name="red">
      <color rgba="0.8 0.0 0.0 1.0"/>
    </material>
    <xacro:property name="cameraSize" value="0.07" /> <!-- Size of square 'camera' box -->
    <xacro:property name="cameraMass" value="0.1" /> <!-- Mass of square 'camera' box -->

    <joint name="prismatic_joint_Z" type="prismatic">
        <axis xyz="0 0 1" limit="-3.14 3.14" />
        <origin xyz="0 0 1" rpy="0 0 0"/>
        <parent link="base_link"/>
        <child link="dummy_link1"/>
        <limit effort="330.0" velocity="3.14"/>
      </joint>
      <link name="dummy_link1"/>
      <joint name="base_link_to dummy_link1" type="fixed">
        <parent link="base_link" />
        <child link="dummy_link1" />
      </joint> 
      <joint name="revolute_joint_z" type="revolute">
        <axis xyz="0 0 1" limit="-3.14 3.14" />
        <origin xyz="0 0 1" rpy="0 0 0"/>
        <parent link="dummy_link1"/>
        <child link="camera_link"/>
        <limit effort="330.0" velocity="3.14"/>
      </joint>
      <link name="camera_link">
        <collision>
          <origin xyz="0 0 0" rpy="0 0 0"/>
          <geometry>
        <box size="${cameraSize} ${cameraSize} ${cameraSize}"/>
          </geometry>
        </collision>
        <visual>
          <origin xyz="0 0 0" rpy="0 0 0"/>
          <geometry>
        <box size="${cameraSize} ${cameraSize} ${cameraSize}"/>
          </geometry>
          <material name="red"/>
        </visual>
    
        <inertial>
          <mass value="${cameraMass}" />
          <origin xyz="0 0 0" rpy="0 0 0"/>
          <box_inertia m="${cameraMass}" x="${cameraSize}" y="${cameraSize}" z="${cameraSize}"/>>
          <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
        </inertial>
      </link>

